<UserControl x:Class="RubiusTestTaskModule.Dialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RubiusTestTaskModule"
             mc:Ignorable="d" d:DesignWidth="350" Height="400">
    <Grid Background="White">
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
            <StackPanel x:Name="spMain" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="280"/>
        </ScrollViewer>
        <Button x:Name="bConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="BConfirmClick" />
   </Grid>
</UserControl>
